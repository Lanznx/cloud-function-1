        "node": "16"
    },
    "main": "index.js",
    "dependencies": {
        "body-parser": "^1.20.0",
        "express": "^4.18.1",
        "firebase-admin": "^11.0.1",
        "firebase-functions": "^3.24.1"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.18.9",
        "eslint": "^8.9.0",
        "eslint-config-google": "^0.14.0",
        "firebase-functions-test": "^0.2.0"
    }
}
